<div class="container">
    <div class="row ">
      <div class="col-md-6 col-sm-8 mx-auto">
        <h2>Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.input :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.input :password, autocomplete: "off" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.input_field :remember_me, as: :boolean%>
              <label class "mb-0" for="">Remember Me</label>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.button :submit, "Log in",class:"btn btn-primary mt-3" %>
          </div>
        <% end %>

        <div class="d-flex flex-column text-center mt-3">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "link-red"%>
          <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "link-red" %>

        </div>

      </div>
    </div>
</div>
